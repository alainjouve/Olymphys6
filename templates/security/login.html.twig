{% extends 'base1.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

    {# <h1> Connexion </h1> #}

    <form class="form-signin" method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
        <span style="font-size:larger;color: red">A partir du 1 mars 2024, l'identifiant est l'adresse mail de votre compte</span>
        <h1 class="h3 mb-3 font-weight-normal">Connectez vous</h1>
        <label for="inputEmail" class="sr-only">Email</label>
        <input autofocus class="form-control" id="inputEmail" name="_email" placeholder="Adresse mail" required>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" name="_password" id="inputPassword" class="form-control" placeholder="Mot de Passe"
               required>
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Se rappeler de moi
            </label>
        </div>
        <input name="_csrf_token" type="hidden"
               value="{{ csrf_token('authenticate') }}"
        >
        <button class="btn btn-lg btn-primary btn-block" type="submit">
            Se connecter
        </button>


    </form>
    <div class="row">
        <div class="col text-center">
            <a href="{{ path('forgotten_password') }}">Mot de passe oubli√©</a>
        </div>
    </div>
    {#   <a href="{{path('register')}}" class="btn btn-primary" type="submit">
            Je n'ai pas de compte
        </a> #}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/login.css') }}">
{% endblock %}